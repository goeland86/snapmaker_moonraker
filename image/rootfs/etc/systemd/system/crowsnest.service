[Unit]
Description=Crowsnest - Webcam streaming for Mainsail
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=60
StartLimitBurst=3

[Service]
Type=simple
User=pi
ExecStart=/home/pi/crowsnest/crowsnest -c /home/pi/printer_data/config/crowsnest.conf
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
